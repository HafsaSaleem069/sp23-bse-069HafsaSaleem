<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/style.css">
</head>

<body>
    <nav class="navbar">
        <div class="container-fluid">
            <!-- Brand -->
            <img class="navbar-brand" src="../images/Logo.png" alt="">
            <!-- Toggle button: Visible on medium and smaller screens -->
            <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Center Categories -->
            <div class="d-none d-lg-flex categorynav">
                <ul class="navbar-nav me-auto gap-5 d-lg-flex flex-row justify-content-center align-items-center">
                    <li class="nav-item"><a class="nav-link active" id="home" href="http://localhost:3000/home">Home</a>
                    </li>
                    <li class="nav-item"><a class="nav-link active" id="burger"
                            href="http://localhost:3000/home/burger">Burgers</a></li>
                    <li class="nav-item"><a class="nav-link active" id="pizza"
                            href="http://localhost:3000/home/pizza">Pizza</a></li>
                    <li class="nav-item"><a class="nav-link active" id="Coffee"
                            href="http://localhost:3000/home/coffee">Coffee</a></li>
                    <li class="nav-item"><a class="nav-link active" id="Drinks"
                            href="http://localhost:3000/home/desi">Desi</a></li>
                    <li class="nav-item"><a class="nav-link active" id="Dessert"
                            href="http://localhost:3000/home/desserts">Desserts</a></li>
                </ul>
            </div>
            <!-- Dynamic Login/Register or Profile/Cart Links -->
            <div class="d-flex align-items-center gap-1 ">
                <% if (user) { %>
                    <div class="d-flex align-items-center gap-3 ">
                        <a style="color:rgb(228, 153, 55); text-decoration: none; font-weight: bold;font-size: 1.3rem;"
                            href="http://localhost:3000/admin">Admin</a>
                        <!-- Cart Icon -->
                        <a href="http://localhost:3000/home/cart" class="nav-link icon-link">
                            <img style="width: 30px;" src="../images/cart.png" alt="cart" id="cart">
                        </a>
                        <!-- Notification Icon -->
                        <a href="http://localhost:3000/home/notifications" class="nav-link icon-link">
                            <img style="width: 30px;" src="../images/notification.png" alt="notifications"
                                id="notifications">
                        </a>
                        <!-- Profile Icon -->
                        <div class="d-flex align-items-center gap-1">
                            <a href="http://localhost:3000/home/profile/" class="nav-link icon-link">
                                <img style="width: 30px; " src="../images/user.png" alt="Profile" id="profile">
                            </a>
                            <span style="color: aliceblue; font-size: 0.7rem;" class="username-text">
                                <%= user.fullname %>
                            </span>
                        </div>
                        <!-- Logout Button -->
                        <form action="/home/logout" method="POST" style="display:inline;">
                            <button
                                style="width:auto;font-size: 0.7rem; background-color: rgb(229, 149, 45);border: none;"
                                id="logout" type="submit" class="btn btn-danger">Logout</button>
                        </form>
                    </div>
                    <% } else { %>
                        <div class="d-none d-lg-flex ">
                            <ul
                                class="navbar-nav me-auto gap-3 d-none d-lg-flex flex-row justify-content-center align-items-center">
                                <!-- ---------------------Login---------------------------- -->
                                <li class="nav-item">
                                    <a class="nav-link active" id="login" aria-current="page"
                                        href="http://localhost:3000/home/login">Login</a>
                                </li>
                                <!-- --------------------Register---------------------------- -->
                                <li class="nav-item">
                                    <a class="nav-link active" id="register" aria-current="page"
                                        href="http://localhost:3000/home/register">Register</a>
                                </li>
                                <!-- --------------------------------------------------------------- -->
                            </ul>
                        </div>
                        <% } %>
            </div>
        </div>
    </nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../js/register.js"></script>
</body>

</html>